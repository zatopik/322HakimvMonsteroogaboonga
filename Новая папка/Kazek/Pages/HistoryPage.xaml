<Page x:Class="Kazek.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kazek.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryPage">

    <Grid>
        
        <Image Margin="0,0,0,3" Source="/1575606258_0_150_3071_1877_1920x0_80_0_0_14f91956405959e7d81b6fe26d599f4a.jpg" Stretch="Fill"/>

        <Grid>
            <ListView Name="ListUsers" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Margin="40,115,91,115">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=id_user}" Width="140">User</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=played_time}" Width="300">Дата игры</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=result}" Width="200">Результат</GridViewColumn>
                     
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Button Content="Назад" Margin="24,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        
    </Grid>
</Page>
