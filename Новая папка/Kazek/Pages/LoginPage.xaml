<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kazek.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="Kazek.Pages.LoginPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#FF505050">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="590" Height="210" Margin="0,135,0,0">
            <TextBlock Margin="5"><Run Text="Логин"/></TextBlock>
            <TextBox Margin="5" x:Name="Login" HorizontalAlignment="Stretch"/>
            <TextBlock Margin="5"><Run Text="Пароль"/></TextBlock>
            <PasswordBox Margin="5" x:Name="Password" HorizontalAlignment="Stretch"/>
            <Button Click="EnterCl" Margin="5" HorizontalAlignment="Stretch" Content="Войти"/>
            <TextBlock HorizontalAlignment="Right" Margin="5" Foreground="Black" MouseDown="Register_Click"><Run Text="Зарегистрироваться"/></TextBlock>
        </StackPanel>

    </Grid>
</Page>
